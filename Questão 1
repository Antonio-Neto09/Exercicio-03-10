<body>
    <div class="container">
        <h1>Bem-vindo!</h1>
        <label for="nome">Digite seu nome:</label>
        <input type="text" id="nome" placeholder="Seu nome">
        <button onclick="saudar()">Clique aqui</button>
        <p id="mensagem"></p>
    </div>
    <script src="script.js"></script>
</body>
